	"configurations": [
		{
			"name": "ft_countwords",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/lib/libft/src/str_fns/ft_count_words",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${fileDirname}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
